---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import {
  APPLE_TOUCH_ICON,
  FAV_ICON,
  FAV_ICON_16,
  FAV_ICON_32,
  SITEMANIFEST_ICON,
  SAFARI_TAB_ICON,
  MSTILE_ICON
} from '../assets/favicons';

const title = 'ZincSearch - A modern search engine';
---

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <style is:global>
    @import '../assets/css/base.css';
    @import '../assets/css/main.css';
    @import '../assets/css/page.css';
    @import '../assets/css/carousel.css';
    @import '../assets/css/blogs.css';
  </style>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="title" content="ZincSearch - A modern search engine">
  <meta name="description"
    content="ZincSearch is the simplest and easiest search system to get up and running. It's an open source easy-to-use search engine to solves your observability needs.">
  <meta name="keywords" content="ZincSearch, ZincLabs, Zinc, Search, Search Engine, Search System">
  <meta name="robots" content="index, follow">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="language" content="English">
  <meta name="revisit-after" content="5 days">
  <meta name="author" content="Prabhat Sharma, Hengfei Yang">

  <!-- favicon -->
  <link rel="icon" href="/favicon.ico">

  <!-- google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;800&display=swap" rel="stylesheet">

  <!-- open graph -->
  <meta property="og:title" content="ZincSearch - A modern search engine">
  <meta property="og:description"
    content="ZincSearch is the simplest and easiest search system to get up and running. It's an open source easy-to-use search engine to solves your observability needs.">
  <meta property="og:type" content="website">
  <meta property="og:image" content="/social-preview-image.png">

  <link rel="apple-touch-icon" sizes="180x180" href={APPLE_TOUCH_ICON}>
  <link rel="icon" type="image/png" sizes="32x32" href={FAV_ICON_32}>
  <link rel="icon" type="image/png" sizes="16x16" href={FAV_ICON_16}>
  <link rel="manifest" href={SITEMANIFEST_ICON}>
  <link rel="mask-icon" href={SAFARI_TAB_ICON} color="#5ca380">
  <link rel="shortcut icon" href={FAV_ICON}>
  <meta name="apple-mobile-web-app-title" content="ZincSearch">
  <meta name="application-name" content="ZincSearch">
  <meta name="msapplication-TileColor" content="#ffffff">
  <meta name="msapplication-TileImage" content={MSTILE_ICON}>
  <meta name="msapplication-config" content="../../assets/favicons/browserconfig.xml">
  <meta name="theme-color" content="#ffffff">

  <!-- page title -->
  <title>{title}</title>

</head>

<body>
  <div class="root">
    <Header />
      <div id="main-content">
        <slot />
      </div>
    <Footer />
  </div>
</body>
</html>

<script is:inline src='/assets/js/mainFunctions.js'/>
